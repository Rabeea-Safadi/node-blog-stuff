<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Home | Login</title>
        <%- include("partials/imports.ejs"); %>
    </head>
    <body>
        <div class="container py-4">
            <div class="card">
                <div class="card-header">
                    <div class="card-title fs-3 fw-bold">Login</div>
                    <div class="card-subtitle fs-6 text-body-secondary">Please enter your credentials</div>
                </div>

                <div class="card-body">
                    <form action="/auth/login" method="post" class="row row-gap-4">
                        <div class="col-12 col-md-6">
                            <div class="form-floating">
                                <input type="text" name="username" id="username" class="form-control" placeholder="" autofocus />
                                <label for="username">Username</label>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-floating">
                                <input type="password" name="password" id="password" class="form-control" placeholder="" />
                                <label for="password">Password</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="vstack gap-2">
                                <button type="submit" class="btn btn-primary w-100">Login</button>
                                <a href="/register" class="btn btn-outline-primary w-100">Register</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
